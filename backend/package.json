{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Production-ready, modular backend API for portfolio management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "migration:show": "typeorm migration:show",
    "db:seed": "ts-node src/scripts/seed.ts",
    "init-admin": "ts-node src/scripts/init-admin.ts",
    "health-check": "node healthcheck.js",
    "docker:build": "docker build -t portfolio-backend .",
    "docker:run": "docker run -p 3000:3000 portfolio-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "clean": "rm -rf dist node_modules package-lock.json",
    "preinstall": "npm run clean",
    "postinstall": "npm run build"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "postgresql",
    "typeorm",
    "jwt",
    "authentication",
    "api",
    "portfolio",
    "backend"
  ],
  "author": "Ashish Jaiswal",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.15.4",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashishjaiswal222/newportfolio.git"
  },
  "bugs": {
    "url": "https://github.com/ashishjaiswal222/newportfolio/issues"
  },
  "homepage": "https://github.com/ashishjaiswal222/newportfolio#readme"
}
