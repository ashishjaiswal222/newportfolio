# =============================================================================
# PRODUCTION-READY BACKEND CONFIGURATION
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=your_database_name

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_LOGIN_USERNAME=admin@yourdomain.com
ADMIN_LOGIN_PASSWORD=your_secure_admin_password

# =============================================================================
# EMAIL CONFIGURATION (for password reset and notifications)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
COMPANY_EMAIL=your_email@gmail.com
COMPANY_EMAIL_PASSWORD=your_app_specific_password
COMPANY_SENDER_NAME=Your Company Name
BCC_EMAIL=admin@yourdomain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your_session_secret_key
SESSION_COOKIE_SECURE=true  # Set to true in production with HTTPS

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# =============================================================================
# CACHE CONFIGURATION (Redis)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics
GA_TRACKING_ID=

# Social Media
TWITTER_API_KEY=
TWITTER_API_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# =============================================================================
# DEVELOPMENT ONLY (remove in production)
# =============================================================================
# TinyMCE API Key
VITE_TINYMCE_API_KEY=your_tinymce_api_key

# MongoDB (if using)
MONGO_URI=mongodb://localhost:27017/your_database 